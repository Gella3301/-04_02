<Window x:Class="Практика04_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика04_02"
        mc:Ignorable="d"
        Title="" Height="450" Width="500" >


    <Window.Background>
        <ImageBrush ImageSource ="Image/Auth.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel >
            <Label Content="АСУ Mello" FontFamily="Times New Roman" FontSize="30" HorizontalAlignment="Center" Foreground="Black"/>
            <!--статичная текстова метка с надписью (не меняется во времяработы)-->
            <Separator Margin="5,0,5,15"/>
            <!--разделите в виде линии с отступами 5 слева 0 сверху 5 справа и 15 снизу-->
            <Label Content="Введите логин" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
            <!--тектовое поле для ввода логина-->
            <TextBox x:Name="loginTextBox" Margin="5,0,5,0" Width="412" Height="26"/>

            <Label Content="Введите пароль" FontSize="20" Foreground="Black" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <!--поле для ввода пароля-->
            <PasswordBox x:Name="passwordBox1"
                     Margin="5,0,5,0" Width="410" Height="26"/>



            <Button Content="Авторизация" FontSize="20"
                Margin="5,15,5,5"
                Name="regiztrationButton" Foreground="Black"
                Click="regiztrationButton_Click"
                Background="Transparent" Width="195"/>
            <Label Content="Пройдите авторизацию перед началом работы" FontFamily="Arial" HorizontalAlignment="Center"   FontSize="15" Foreground="Black"/>
           
        </StackPanel>

    </Grid>
</Window>


