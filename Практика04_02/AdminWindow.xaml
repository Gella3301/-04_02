<Window x:Class="Практика04_02.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика04_02"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" Background="#B0E0E6">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Управление клиентами" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid x:Name="ClientsGrid" Grid.Row="1" Margin="0,0,0,10 " Background="#87CEFA"
                  AutoGenerateColumns="False"
                  SelectionChanged="ClientsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Код заказа" Binding="{Binding OrderCode}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                <DataGridCheckBoxColumn Header="Постоянный" Binding="{Binding IsRegularCustomer}" Width="80"/>
                <DataGridTextColumn Header="Заказов" Binding="{Binding OrderCount}" Width="60"/>
                <DataGridTextColumn Header="Скидка %" Binding="{Binding Discount}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Background="#F5F5F5" >
            <TextBlock Text="Добавить/редактировать клиента" 
                       FontWeight="Bold" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ФИО:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="FullNameBox" Margin="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Код заказа:"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="OrderCodeBox" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Телефон:"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="PhoneBox" Margin="5"/>

                <!-- Новые поля для постоянного клиента -->
                <CheckBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                         x:Name="RegularCustomerCheckBox" 
                         Content="Постоянный клиент" 
                         Margin="5" VerticalAlignment="Center"
                         Checked="RegularCustomerCheckBox_Checked"
                         Unchecked="RegularCustomerCheckBox_Unchecked"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Кол-во заказов:"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="OrderCountBox" Margin="5" IsEnabled="False"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Скидка %:"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="DiscountBox" Margin="5" IsEnabled="False"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Добавить" Click="AddClient_Click" Width="80" Margin="5" Background="#4CAF50" Foreground="White"/>
                <Button Content="Сохранить" Click="UpdateClient_Click" Width="80" Margin="5" Background="#2196F3" Foreground="White"/>
                <Button Content="Удалить" Click="DeleteClient_Click" Width="80" Margin="5" Background="#F44336" Foreground="White"/>
                <Button Content="Очистить" Click="ClearFields_Click" Width="80" Margin="5" Background="#FF9800" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>