<Window x:Class="Практика04_02.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика04_02"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800" Background="#FFFACD">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <DataGrid x:Name="TablesGrid" Grid.Column="0" Margin="5 " Background="AliceBlue"
           AutoGenerateColumns="False"
           SelectionChanged="Grid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="ID заказа" Binding="{Binding OrderID}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Добавить/изменить заказ" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Выберите клиента:"/>
            <ComboBox x:Name="ClientComboBox" Margin="0,0,0,5" 
                      DisplayMemberPath="FullName"
                      SelectionChanged="ClientComboBox_SelectionChanged"/>

            <Label Content="ФИО:"/>
            <TextBox x:Name="FIOBox" Margin="0,0,0,5" IsReadOnly="False" />

            <Label Content="ID заказа:"/>
            <TextBox x:Name="IDBox" Margin="0,0,0,5"/>

            <Label Content="Статус:"/>
            <ComboBox x:Name="StatusBox" Margin="0,0,0,5">
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="Закончен"/>
                <ComboBoxItem Content="В очереди"/>
            </ComboBox>

            <Label Content="Описание:"/>
            <TextBox x:Name="DescBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" Click="Add_Click" Width="80" Background="Transparent" Margin="5" />
                <Button Content="Сохранить" Click="Update_Click" Width="80" Background="Transparent" Margin="5" />
                <Button Content="Удалить"  Width="80" Background="Transparent" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>